{% extends "layouts/base.html.twig" %}



{% block body %}
    <div class="row row-cols-lg-3 row-cols-1 my-5 ">
        {% for blogpost in blogposts %}
            
                <div class="col">
                <a href=" {{path('app_blogpost_details', {'slug': blogpost.slug})}} ">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title text-dark">{{blogpost.titre}}</h5>
                            <p class="card-text text-secondary">{{blogpost.contenu}}</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">date de publication : {{blogpost.datepublication | date('d-m-Y')}} </small>
                        </div>
                    </div>
                </a>
                    
                </div>
          
        {% endfor %}
        
    </div>
    <div class="d-flex justify-content-center">
        <div class="navigation">
            {{ knp_pagination_render(blogposts) }}
        </div>
    </div>
{% endblock %}
